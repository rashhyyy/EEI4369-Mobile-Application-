<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <!-- Date -->
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17 June"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Greeting -->
    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, Rashmi"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="#000000"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date" />

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/cat"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_date"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search bar -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:hint="Search courses, careers..."
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="18sp"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_greeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp" />

    <!-- Start Exploring Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_start_exploring"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_graduate"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:scaleType="fitCenter"
                android:src="@drawable/grajugirl" />

            <TextView
                android:id="@+id/tv_explore_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What would you like to explore today?"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginStart="120dp"
                android:layout_marginTop="24dp" />

            <Button
                android:id="@+id/btn_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Exploring"
                android:textSize="12sp"
                android:backgroundTint="#0D1B2A"
                android:textColor="#FFFFFF"
                android:layout_marginStart="120dp"
                android:layout_below="@id/tv_explore_title"
                android:layout_marginTop="12dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- "For You" Title -->
    <TextView
        android:id="@+id/tv_for_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For you"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/card_start_exploring"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- For You Cards -->
    <LinearLayout
        android:id="@+id/for_you_cards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_for_you"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="2">

        <!-- Vocational Courses -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/one" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vocational Courses"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#F2F2F2"
                        android:background="#AA0D1B2A"
                        android:padding="6dp" />

                    <Button
                        android:id="@+id/btn_browse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Browse Now"
                        android:textSize="16sp"
                        android:textColor="#0D1B2A"
                        android:backgroundTint="#FFFFFF"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Find Your Path -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/two" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find Your Path"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#F2F2F2"
                        android:background="#AA0D1B2A"
                        android:padding="6dp" />

                    <Button
                        android:id="@+id/btn_quiz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start Quiz"
                        android:textSize="16sp"
                        android:textColor="#0D1B2A"
                        android:backgroundTint="#FFFFFF"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Learning & Institute Section Title -->
    <TextView
        android:id="@+id/tv_learning_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learning and Institute Section"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/for_you_cards"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Learning & Institute Card (Updated) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_learning_institute"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_learning_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Private"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Universities\nTop courses at NSBM, ICBT..."
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/map" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/mapIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/mapicon" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/menu" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
