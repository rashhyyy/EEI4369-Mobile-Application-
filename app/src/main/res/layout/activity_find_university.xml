<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/find_universities_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1B2A"
    tools:context=".FindUniversity">

    <!-- Centered container for all content -->
    <LinearLayout
        android:id="@+id/center_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Circular Background with Circular Map Icon -->
        <FrameLayout
            android:id="@+id/map_circle_container"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/circle_white"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/mapf"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true"
                android:contentDescription="Map Icon" />
        </FrameLayout>

        <!-- Heading -->
        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Universities"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginTop="24dp"
            android:textStyle="normal" />

        <!-- Subheading -->
        <TextView
            android:id="@+id/subheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Near Your Location"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="4dp" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:text="Continue"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#A5BFE2"
            android:textColor="#000000" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:text="Back"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
