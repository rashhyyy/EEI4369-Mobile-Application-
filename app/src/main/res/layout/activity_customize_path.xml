<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customize_path">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background1"
        android:contentDescription="Background" />

    <!-- Back Icon (Top-left corner) -->
    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/backicon"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Greeting Text (Left side below back icon) -->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi Rosy"
        android:textColor="#0D1B2A"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Profile Picture (Top-right corner, bigger size) -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/profilepic"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/mapicon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/menu" />
    </LinearLayout>

    <!-- White Box Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/whiteBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan Your Journey"
                    android:textColor="#0D1B2A"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Let's Customize Your Path"
                    android:textColor="#0D1B2A"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal" />

                <!-- Select Exam Type -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Exam Type:"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"
                    android:textColor="#0D1B2A" />

                <RadioGroup
                    android:id="@+id/examTypeGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/rb_ol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="G.C.E O/L" />

                    <RadioButton
                        android:id="@+id/rb_al"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="G.C.E A/L"
                        android:layout_marginStart="20dp" />
                </RadioGroup>

                <!-- Enter Results -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Results:"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"
                    android:textColor="#0D1B2A" />

                <EditText
                    android:id="@+id/input_subject1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Mathematics"
                    android:background="@drawable/edit_text_bg"
                    android:paddingHorizontal="14dp"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/input_subject2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="English"
                    android:background="@drawable/edit_text_bg"
                    android:paddingHorizontal="14dp"
                    android:layout_marginTop="14dp" />

                <EditText
                    android:id="@+id/input_subject3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Science"
                    android:background="@drawable/edit_text_bg"
                    android:paddingHorizontal="14dp"
                    android:layout_marginTop="14dp" />

                <!-- Preferred Study Mode -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preferred Study Mode:"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="#0D1B2A" />

                <RadioGroup
                    android:id="@+id/studyModeGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/rb_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="online" />

                    <RadioButton
                        android:id="@+id/rb_oncampus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="on-campus"
                        android:layout_marginStart="20dp" />
                </RadioGroup>

                <!-- Preferred Study Area -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preferred Study Area:"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="#0D1B2A" />

                <Spinner
                    android:id="@+id/districtSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_bg"
                    android:spinnerMode="dropdown" />

                <!-- Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"
                    android:textColor="#0D1B2A" />

                <EditText
                    android:id="@+id/input_location"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Location"
                    android:background="@drawable/edit_text_bg"
                    android:paddingHorizontal="14dp"
                    android:layout_marginTop="10dp" />

                <!-- Find Opportunities Button -->
                <Button
                    android:id="@+id/btn_find_oopurnities"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Find Opportunities"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#0D1B2A"
                    android:layout_marginTop="24dp" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
