<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.s23010417.edupathlanka">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EdupathLanka"
        tools:targetApi="31">

        <!-- 👤 Profile Activity -->
        <activity
            android:name=".profile"
            android:exported="false" />

        <!-- 📍 Location & Course Selection Activity -->
        <activity
            android:name=".location_selection"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- 🧭 Find University Activity -->
        <activity
            android:name=".FindUniversity"
            android:exported="true" />

        <!-- 🏠 Dashboard Activity -->
        <activity
            android:name=".dashboard"
            android:exported="true" />

        <!-- 🔐 Sign In Activity -->
        <activity
            android:name=".sign_in"
            android:exported="false" />

        <!-- 📝 Sign Up Activity -->
        <activity
            android:name=".Signup"
            android:exported="false" />

        <!-- 🚀 Main Launcher Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
